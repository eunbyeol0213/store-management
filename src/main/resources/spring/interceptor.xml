<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 인터셉터 설정 파일. 위쪽부터 실행-->
	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/**"/>
			<mvc:exclude-mapping path="/login"/>
			<mvc:exclude-mapping path="/resources/css/**"/>
			<mvc:exclude-mapping path="/resources/images/**"/>
			<bean class="com.mycompany.webapp.common.filter.LoginInterceptor"/>
		</mvc:interceptor>
		
		<mvc:interceptor>
			<mvc:mapping path="/score/**"/>
			<bean class="com.mycompany.webapp.common.filter.ManagerInterceptor"/>
		</mvc:interceptor>
		
		<mvc:interceptor>
			<mvc:mapping path="/center/**"/>
			<mvc:exclude-mapping path="/center/centerlist/**"/>
			<bean class="com.mycompany.webapp.common.filter.SysadminInterceptor"/>
		</mvc:interceptor>
		
		<mvc:interceptor>
			<mvc:mapping path="/manager/**"/>
			<bean class="com.mycompany.webapp.common.filter.AdminInterceptor"/>
		</mvc:interceptor>
	</mvc:interceptors>

</beans>
